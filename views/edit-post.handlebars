<div class="d-flex flex-column b-primary col-6 mx-auto mt-5 rounded-4">
  <div class="bg-prmy rounded-top-3">
    <h2 class="txt-drk text-center">Edit Blogpost</h2>
  </div>
  <div class="p-4">
    <form>
      <div class="mb-3">
        <input type="text" class="form-control" id="title" value="{{title}}" />
      </div>
      <div class="mb-3">
        <textarea
          class="form-control"
          id="content"
          rows="3"
        >{{content}}</textarea>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn-prmy mx-1" id="update">Submit</button>
        <button class="btn-red mx-1" id="delete">Delete</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/edit-post.js"></script>